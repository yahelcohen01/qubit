{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@shared/types": ["./app/shared/types"],
      "@shared/types/*": ["./app/shared/types/*"],
      "@shared/hooks": ["./app/shared/hooks"],
      "@shared/hooks/*": ["./app/shared/hooks/*"],
      "@shared/lib": ["./app/shared/lib"],
      "@shared/lib/*": ["./app/shared/lib/*"],
      "@shared/icons": ["./app/shared/icons"],
      "@shared/icons/*": ["./app/shared/icons/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
